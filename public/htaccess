<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# ----------------------------------------------------------------------
# | Browser Caching (Tiempo de vida de caché)                          |
# ----------------------------------------------------------------------

<IfModule mod_expires.c>
  ExpiresActive On

  # Imágenes, CSS, JS, Fuentes -> 1 AÑO (Cache agresiva)
  # Como Vite cambia el nombre del archivo si el contenido cambia,
  # es seguro guardarlos por mucho tiempo.
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"

  # HTML -> 0 SEGUNDOS (Sin caché o muy baja)
  # El index.html NUNCA debe guardarse en caché por mucho tiempo,
  # porque es el que llama a los nuevos archivos JS/CSS cuando actualizas.
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
  # Forzar cabeceras para archivos estáticos
  <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|webp|svg|woff2)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>

  # Prevenir caché en HTML para ver cambios al instante
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>